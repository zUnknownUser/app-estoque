{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                    // <- importante p/ alias
    "paths": {
      "@/*": ["./*"]                   // <- alias "@/..."
    },
    "types": ["expo-router/types"]     // <- typed routes funcionando
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
